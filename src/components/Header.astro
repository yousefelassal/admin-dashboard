---
import ThemeIcon from "../components/ThemeIcon.astro";
import ProfileIcon from "../components/ProfileIcon.astro";
---

<div class="header-margin backdrop-blur-sm fixed shadow-sm header-grid">
    <div class="header-grid-left">
        <a
            href="/"
            class="text-2xl font-bold text-gray-700 dark:text-gray-100 flex gap-1"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 48 48"
                width="32px"
                height="32px"
                ><path
                    class="dark:fill-slate-100"
                    d="M24 4A10 10 0 1024 24 10 10 0 1024 4zM36.021 28H11.979C9.785 28 8 29.785 8 31.979V33.5c0 3.312 1.885 6.176 5.307 8.063C16.154 43.135 19.952 44 24 44c7.706 0 16-3.286 16-10.5v-1.521C40 29.785 38.215 28 36.021 28z"
                    fill="#00a8c6"
                ></path></svg
            >

            Dashboard
        </a>
    </div>
    <div class="header-grid-right flex gap-4">
        <ThemeIcon />
        <ProfileIcon />
    </div>
</div>

<style>
    .header-margin {
        top: 0;
        z-index: 100;
        height: 4rem;
        width: 100%;
        background-color: var(--color-bg);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem;
    }

    .header-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr;
        grid-template-areas: "left right";
        align-items: center;
    }

    .header-grid-left {
        grid-area: left;
        font-family: "Fjalla One", sans-serif;
    }

    .header-grid-right {
        grid-area: right;
        justify-self: end;
        align-self: center;
    }
</style>

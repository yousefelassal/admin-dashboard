---
import ThemeIcon from "../components/ThemeIcon.astro";
---

<div class="header-margin backdrop-blur-sm fixed shadow-sm header-grid">
    <div class="header-grid-left">
        <a href="/" class="text-2xl font-bold text-gray-700 dark:text-gray-100 flex gap-1">
            <svg width="32px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                ><path class="dark:fill-slate-100"
                    d="M13,3V9H21V3M13,21H21V11H13M3,21H11V15H3M3,13H11V3H3V13Z"
                    fill="#00a8c6"></path></svg
            >
            Dashboard
        </a>
    </div>
    <div class="header-grid-right flex gap-4">
        <ThemeIcon />
        <div class="profile hover:cursor-pointer justify-center items-center flex bg-cyan-950 shadow-sm dark:bg-white">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="#fff"
                width="28px"
                height="28px"
                class=""
            >
                <path d="M0 0h24v24H0z" fill="none" />
                <path
                    class="bg-current dark:fill-cyan-950"
                    d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                />
            </svg>
        </div>
    </div>
</div>

<style>
    .header-margin {
        top: 0;
        z-index: 100;
        height: 4rem;
        width: 100%;
        background-color: var(--color-bg);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem;
    }

    .header-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr;
        grid-template-areas: "left right";
        align-items: center;
    }

    .header-grid-left {
        grid-area: left;
        font-family: 'Fjalla One', sans-serif;
    }

    .header-grid-right {
        grid-area: right;
        justify-self: end;
        align-self: center;
    }

    .profile {
        width: 2.3rem;
        height: 2.3rem;
        border-radius: 50%;
        border: 1px solid var(--color-border);
    }
</style>

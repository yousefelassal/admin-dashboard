---
import RadialMenu from './RadialMenu.astro';
import Searchbar from './Searchbar.astro';
---

<div class="subheader">
    <div class="heading p-2 flex justify-between m-2">
        <h2 class="text-lg font-bold">Projects</h2>
        <Searchbar />
        <RadialMenu />
    </div>
    <div class="flex justify-between m-2">
        <div class="flex gap-4">
            <div id="active" class="active">
                <a href="#" class="p-2">Active</a>
            </div>
            <div id="completed" class="unactive">
                <a href="#" class="p-2">Completed</a>
            </div>
        </div>
    </div>
    
</div>

<style>
    .subheader {
        margin-top: 0.5rem;
        grid-area: header;
    }

    .active{
        border-bottom: 2px solid #73dcf9cc;
        padding-bottom: 0.5rem;
        color: #73dcf9cc;
        transition: all 0.1s ease-in-out;
    }

    .unactive{
        color: #7f9693cc;
        transition: all 0.1s ease-in-out;
    }

    a:hover {
        color: #7f9693;
    }

</style>

<script>
    const active = document.getElementById('active');
    const completed = document.getElementById('completed');

    active.addEventListener('click', () => {
        active.classList.add('active');
        completed.classList.remove('active');
        active.classList.remove('unactive');
        completed.classList.add('unactive');
    });

    completed.addEventListener('click', () => {
        completed.classList.add('active');
        active.classList.remove('active');
        completed.classList.remove('unactive');
        active.classList.add('unactive');
    });
</script>